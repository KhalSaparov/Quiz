<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="knopka">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="backgroundTint">@color/blue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="knopka_play" parent="knopka">
        <item name="backgroundTint">@color/green</item>
        <item name="android:text">@string/play</item>
    </style>

    <style name="knopka_rating" parent="knopka_play">
        <item name="backgroundTint">@color/yellow</item>
        <item name="android:text">@string/rating</item>
    </style>

    <style name="knopka_exit" parent="knopka_play">
        <item name="backgroundTint">@color/red</item>
        <item name="android:text">@string/exit</item>
    </style>

</resources>